<%- include('../includes/head.ejs') %>

  <link rel="stylesheet" href="/style/form.css">
  <link rel="stylesheet" href="/style/navigation.css">

</head>
<body>

  <%- include('../includes/navigation.ejs') %>
  
  <div class="form-container">
    <h2>Input Form</h2>
    <form action="/form/add-product" method="POST">
      <label for="to">To:</label>
      <input type="text" name="to" id="to">

      <label for="from">From:</label>
      <input type="text" name="from" id="from">

      <label for="quantity">Quantity:</label>
      <select name="quantity" id="quantity">
        <option value="1">1 ton</option>
        <option value="2">2 ton</option>
        <option value="3">3 ton</option>
      </select>

      <label for="address">Address:</label>
      <input type="text" name="address" id="address">

      <label for="transporter">Transporter:</label>
      <select name="transporter" id="transporter">
        <option value="transporter1">Transporter 1</option>
        <option value="transporter2">Transporter 2</option>
        <option value="transporter3">Transporter 3</option>
      </select>

      <button class="btn" type="submit">Push</button>

    </form>
  </div>

  
  <%- include('../includes/end.ejs') %>
